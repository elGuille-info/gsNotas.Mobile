<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Appearing="ContentPage_Appearing"
             x:Class="gsNotasNET.CopiarSQLLite"
             Title="Copiar notas de SQLLite">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="LabelInfo" Text="Comprobando si hay datos anteriores (en SQL Lite)..."
                VerticalOptions="CenterAndExpand" FontSize="Large" Padding="20"
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="btnFinalizar" Clicked="btnFinalizar_Clicked"
                    Text="Finalizar" IsVisible="False" />
            <Label Text="---" />
            <Button x:Name="btnPrivacidad" Text="Política de privacidad" 
                    Grid.Row="1" HeightRequest="35"
                    HorizontalOptions="FillAndExpand"
                    Clicked="btnPrivacidad_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
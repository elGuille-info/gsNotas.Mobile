            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell Height="1000">
                        <StackLayout Orientation="Vertical" HeightRequest="1000">
                            <Label Text="{Binding Email}" FontAttributes="Bold"
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding Nombre}" 
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding Alta}" 
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding Baja}" 
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding UltimoAcceso}" 
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding ClaveSHA}" 
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding Validado}" 
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding NotasCopiadas}" 
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding NotasCopiadasAndroid}" 
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding Eliminado}" 
                   Style="{DynamicResource ListItemTextStyle}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="btnPrivacidad" Text="Política de privacidad" 
                Grid.Row="2" HeightRequest="35"
                HorizontalOptions="FillAndExpand"
                Clicked="btnPrivacidad_Clicked" />

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gsNotasNET.UsuarioValidar"
             Appearing="ContentPage_Appearing"
             Title="Validar usuario">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Indica el código de validación enviado a tu correo."
                   VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
                   Padding="{StaticResource PageMargin}"
                   FontAttributes="Bold" FontSize="Large" />
            <Label Text="  " FontAttributes="Bold" FontSize="Large"/>
            <Label Text="Código de validación:" />
            <Editor x:Name="txtValidar" Placeholder="Código de validación" Text="" />
            <Label Text="  " FontAttributes="Bold" FontSize="Large"/>
            <Button x:Name="btnValidar" Text="Validar" Clicked="btnValidar_Clicked" />
            <Label x:Name="LabelInfo" Text="Indica el código de validación y pulsa en VALIDAR."
                   VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>